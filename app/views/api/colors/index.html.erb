<p id="notice"><%= notice %></p>

<h1>Listing Colors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @colors.each do |color| %>
      <tr>
        <td style="color: <%= color.hex_value%>"><%= color.name %></td>
        <td><%= link_to 'Show', api_color_path(color) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

